<Window x:Class="Ball_Game_02.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Ball_Game_02"
        mc:Ignorable="d"
        Title="Extreme Ball Game" Height="450" Width="800" KeyUp="Player01_KeyUp">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Button Content="Start / Stop" Name="StartStop"  HorizontalAlignment="Left" Margin="21,21,0,0" VerticalAlignment="Top" Width="100" Height="30" Click="StartStop_Click"/>
        <Label Content="0 Clicks" Name="GameStat" HorizontalAlignment="Left" Margin="21,59,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.72,0.885" Height="26" Width="50"/>
        <Canvas Name="PlayField" Background="#dcddde" Margin="140,0,0,0">
            <Ellipse Name="Player01" Width="20" Height="20" Fill="#4759bf" Canvas.Left="100" Canvas.Top="100" MouseUp="Player01_MouseUp" />
        </Canvas>
    </Grid>
</Window>
